        "libs/shared/api/foundation/src/index.ts"
      ],
      "@realworld/shared/api/config": ["libs/shared/api/config/src/index.ts"],
      "@realworld/shared/api/validations": [
        "libs/shared/api/validations/src/index.ts"
      ],
      "@realworld/shared/client-server": [
        "libs/shared/client-server/src/index.ts"
      ],
      "@realworld/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@realworld/shared/common": ["libs/shared/common/src/index.ts"],
      "@realworld/shared/configuration": [
        "libs/shared/configuration/src/index.ts"
      ],
      "@realworld/shared/directives": ["libs/shared/directives/src/index.ts"],
      "@realworld/shared/error-handler": [
        "libs/shared/error-handler/src/index.ts"
      ],
      "@realworld/shared/foundation": ["libs/shared/foundation/src/index.ts"],
      "@realworld/shared/interceptors": [
        "libs/shared/interceptors/src/index.ts"
      ],
      "@realworld/shared/loading": ["libs/shared/loading/src/index.ts"],
      "@realworld/shared/logging": ["libs/shared/logging/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
